include common/common.pug
+head({title: '注册表单', scripts: ['register.js']})
    .wrap.wrap--bg
        .top
            //- em.top__user-name 轩亦辰
            a(href="").top__btn 登录
            | |
            a(href="").top__btn 注册
        .head
            img(src="../images/icon-home/logo.png", alt="").head__logo
            ul.head__nav
                    li.head__nav-zc
                        a(href="").head__nav-item 注册
        .content.register
            ul.register__list
                li.register__item
                    .register__label 姓名：
                    .register__inp
                        input(type="text", placeholder="请输入姓名", value="jxchen").register__input#user
                        span.input__error.none 错误提示!
                li.register__item
                    .register__label 性别：
                    .register__inp#sexy
                        label(for="sex").label__box
                            input(type="radio" name="sex" checked, value="1").input--radio
                            i.label__radio
                            span.label__name 男
                        label(for="sex").label__box
                            input(type="radio", name="sex", value="2").input--radio
                            i.label__radio
                            span.label__name 女
                        span.input__error.none 错误提示!
                li.register__item
                    .register__label 出生日期：
                    .register__inp
                        input(type="date", placeholder="出生日期").register__input#birthday
                        span.input__error.none 错误提示!
                li.register__item
                    .register__label 身份证号 ：
                    .register__inp
                        input(type="text", placeholder="身份证号").register__input.register__input--max#passport
                        span.input__error.none 错误提示!
                li.register__item
                    .register__label 手机号码：
                    .register__inp
                        input(type="text", placeholder="手机号").register__input#phone
                        span.input__error.none 错误提示!
                li.register__item
                    .register__label 输入校验码：
                    .register__inp
                        input(type="text", placeholder="出入校验码").register__input#code
                        a(href="javascript:;").register__btn.register__btn--blue.m--l30#codeBtn 获取验证码
                        span.input__error.none 错误提示!
                li.register__item
                    .register__label 个人简介：
                    .register__inp
                        textarea#introduction(placeholder="（很短的几行字，来讲述你对装修装饰设计的理解和概念，用于展示给用户）", maxLength="300").register__textarea
                li.register__item
                    .register__label
                    .register__submit
                        a(href="javascript:;").register__btn.register__btn--blue.register__btn--max#submitBtn 提  交
                        a(href="javascript:;").register__btn.register__btn--line.m--l30 取  消





