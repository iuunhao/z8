+head({title: 'Z4', bgClass:'f5f7fa'})
    +topBar({
        return:{
            type: 'icon',
            text: '取消',
            color:'yellow'
        },
        menu: {
            type: 'text',
            text: '完成',
            color: 'yellow'
        },
        title: {
            color:'',
            text: '设置密码'
